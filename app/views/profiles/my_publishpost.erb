<% set_meta_tags title: t('.title') %>
<section class="text-gray-600 body-font">
  <div class="container my-1 mb-5 mx-auto flex flex-col px-5 justify-center items-center">
    <p class="mb-5 text-center text-xl text-black-200 opacity-90 underline decoration-pink-300 decoration-5"><%= t '.title' %></p>
    <%= turbo_frame_tag "posts-page-#{@posts.current_page}" do %>
      <% if @posts.present? %>
        <div class="lg:container lg:flex lg:flex-wrap lg:justify-center lg:items-center">
          <%= render @posts %>
        </div>
      <% else %>
        <div class="text-center items-center">
          <%= render 'no_post' %>
        </div>
      <% end %>
      <%= turbo_frame_tag "posts-page-#{@posts.next_page}", loading: :lazy, src: path_to_next_page(@posts) %>
    <% end %>
  </div>
</section>