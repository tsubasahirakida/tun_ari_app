<% content_for(:title, @post.sendername) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @post, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= image_tag "#{@post.post_image}", size: '300x200'  %>
          <%= f.label :sendername %>
          <%= f.text_field :sendername, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
        <%= f.submit class: 'btn btn-primary', value: '下書きにする' %>
        <%= f.submit class: 'btn btn-primary', value: '非公開にする' %>
        <%= f.submit class: 'btn btn-primary', value: '公開する' %>
      <% end %>
      <%= form_with model: @post, url: template_set_edit_posts_path, method: :get, local: true do |f| %>
        <%= f.hidden_field :id, value: "#{@post.id}" %>
        <%= f.submit class: 'btn btn-primary', value: 'テンプレートを見る' %>
      <% end %>
    </div>
  </div>
</div>