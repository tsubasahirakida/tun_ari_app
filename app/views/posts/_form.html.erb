<%= form_with model: @post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= image_tag "#{post.character_id}.png", size: '300x200'  %>
    <%= f.hidden_field :character_id, value: "#{post.character_id}" %>
    <%= f.label :sendername %>
    <%= f.text_field :sendername, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit class: 'btn btn-primary', value: '下書きにする' %>
  <%= f.submit class: 'btn btn-primary', value: '非公開にする' %>
  <%= f.submit class: 'btn btn-primary', value: '公開する' %>
<% end %>