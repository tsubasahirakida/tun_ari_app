<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= post.id %>">
    <%= image_tag post.post_image_url, class: 'card-img-top', size: '600x400' %>
    <div class="card">
        <p class="card-text"><%= post.sendername %></p>
        <p class="card-text"><%= post.body %></p>
        <%= link_to ais_path(post_id: post.id), id: "js-ai-button-for-post-#{post.id}", class:"float-right", data: { turbo_method: :post } do %>
          <%= icon('far', 'star') %>
        <% end %>
      </div>
    </div>
  </div>
</div>