<% content_for(:title, t('.title')) %>
<section class="text-gray-600 body-font">
  <div class="container my-1 mx-auto flex flex-col px-5 justify-center items-center">
    <p class="text-xl"><%= t '.title' %></p>
    <p class="text-xl"><%= @post.status %>中♡</p>
    <p class="text-xl"><%= @post.sendername %>へ</p>
    <%= image_tag @post.post_image_url, class: 'my-1', size: '600x400' %>
    <div class="flex flex-col">
      <% if @post.draft? %>
        <%= link_to edit_post_path(@post), id: "button-edit-#{@post.id}" do %>
          <i class="fa-sharp fa-solid fa-pen"></i>
          文字の再編集する♡？
        <% end %>
      <% end %>
      <%= form_with model: @post, url: status_update_post_path(@post), local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <% if @post.draft? %>
            <%= f.submit class: 'btn btn-outline btn-secondary my-1', value: '非公開にする' %>
            <%= f.submit class: 'btn btn-outline btn-secondary my-1', value: '公開する' %>
          <% elsif @post.archive? %>
            <%= f.submit class: 'btn btn-outline btn-secondary my-1', value: '公開する' %>
          <% elsif @post.publish?  %>
            <%= f.submit class: 'btn btn-outline btn-secondary my-1', value: '非公開にする' %>
          <% end %>
      <% end %>
        <%= link_to post_path(@post), id: "button-delete-#{@post.id}", data: { "turbo-method": :delete, "turbo-confirm": '本当に削除しますか？' } do %>
          <i class="fa-sharp fa-solid fa-trash"></i>
          投稿を削除する？
        <% end %>
        <%= link_to '#' do %>
          <i class="fa-brands fa-twitter"></i>
          ツイッターでシェアする？
        <% end %>
        <%= link_to '#' do %>
          <i class="fa-brands fa-line"></i>
          LINEでシェアする？
        <% end %>
    </div>
  </div>
</section>