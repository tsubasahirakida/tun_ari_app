<%= turbo_frame_tag dom_id(post, :dere_post) do %>
    <%= link_to "デレ#{post.deres.count}コ",
              dere_path(current_user.deres.find_by(post_id: post.id)),
              id: "js-dere-button-for-post-#{post.id}",
              class: "btn btn-active btn-secondary opacity-50",
              data: { turbo_method: :delete } %>
<% end %>